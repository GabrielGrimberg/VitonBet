<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87b14d"
    tools:context="gabrielgrimberg.com.vitonbet.MainActivity">

    <TextView
        android:id="@+id/h_color"
        android:layout_width="320dp"
        android:layout_height="140dp"
        android:layout_above="@+id/ivcasino"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:background="#6A923C"
        android:fontFamily="monospace"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/h_color2"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/tvCasino"
        android:layout_alignBottom="@+id/tvCasino"
        android:layout_alignStart="@+id/h_color"
        android:background="#6A923C"
        android:fontFamily="monospace"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/h_color3"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/tveSports"
        android:layout_alignBottom="@+id/tveSports"
        android:layout_alignStart="@+id/h_color2"
        android:background="#6A923C"
        android:fontFamily="monospace"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/h_color4"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/tveadInfo"
        android:layout_alignStart="@+id/h_color3"
        android:background="#6A923C"
        android:fontFamily="monospace"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tveSports"
        android:layout_below="@+id/tveSportsInfo"
        android:layout_marginTop="12dp"
        android:fontFamily="monospace"
        android:text="Ran out of cash?"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCasinoInfo"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCasino"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/ivcasino"
        android:text="Play the all new Roulette that has been optimised for the VitonBet application now!"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="Rate our VitonBet 5 stars on the Play Store and get â‚¬10 added to your balance."
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tveSportsInfo"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCasinoInfo"
        android:layout_below="@+id/tveSports"
        android:text="Many of the most popular games, teams and tournaments now available to bet on."
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvwarning"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tveadInfo"
        android:layout_below="@+id/tveadInfo"
        android:layout_marginTop="31dp"
        android:text="Please bet responsibly and when the fun stops, make sure to stop."
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tveSports"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCasino"
        android:layout_below="@+id/tvCasinoInfo"
        android:layout_marginTop="18dp"
        android:fontFamily="monospace"
        android:text="Bet on eSports:"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCasino"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvCasinoInfo"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="22dp"
        android:fontFamily="monospace"
        android:text="Play Casino Mode:"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:fontFamily="monospace"
        android:text="Promotion:"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/ivcasino"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignTop="@+id/h_color2"
        app:srcCompat="@drawable/casinoimage" />

    <ImageView
        android:id="@+id/ivcash"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/tveadInfo"
        android:layout_alignStart="@+id/ivsports"
        app:srcCompat="@drawable/cash" />

    <ImageView
        android:id="@+id/ivVitonBet"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ai_primarylogowhite" />

    <ImageView
        android:id="@+id/ivsports"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/tveSportsInfo"
        android:layout_toStartOf="@+id/tvCasinoInfo"
        app:srcCompat="@drawable/esportsimage" />

    <TextView
        android:id="@+id/tveadInfo"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tveSportsInfo"
        android:layout_below="@+id/tvad"
        android:text="Watch an advertisement to gain some cash so you can keep on betting or win big in casino."
        android:textColor="#FFFFFF" />

    <!-- Start of Top Navigator -->
    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.design.widget.NavigationView
            android:id="@+id/top_nav_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#FFFFFF"
            app:headerLayout="@layout/top_nav_header"
            app:menu="@menu/top_nav">

        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
    <!-- End Top Navigator -->

</RelativeLayout>