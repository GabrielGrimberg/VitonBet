<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87b14d"
    tools:context="gabrielgrimberg.com.vitonbet.TransferActivity">

    <EditText
        android:id="@+id/inputemailf"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter an email"
        android:inputType="textEmailAddress"
        android:textAlignment="viewStart" />

    <EditText
        android:id="@+id/inputamountf"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/inputemailf"
        android:layout_below="@+id/inputemailf"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="20"
        android:inputType="phone"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/inputamountf"
        android:layout_below="@+id/inputamountf"
        android:layout_marginStart="41dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_shapebtn"
        android:elevation="0dp"
        android:text="Send Now!"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/sendBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sendBtn"
        android:layout_alignBottom="@+id/sendBtn"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/sendBtn"
        android:background="@drawable/rounded_shapebtn"
        android:elevation="0dp"
        android:text="Go Back"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/ivVitonBet"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="435dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ai_primarylogowhite" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:fontFamily="monospace"
        android:text="Would you like to help a friend out or transfer cash to another account?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="26dp"
        android:fontFamily="monospace"
        android:text="Enter the person's email and the amount you want to send below and hit the send button!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>
